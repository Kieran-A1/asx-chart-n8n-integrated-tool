MCP_TRANSPORT=sse #server-sent events communication with n8n mcp client (selected this in workflow)
MCP_HOST=127.0.0.1 #host for the MCP server (local in this case)
MCP_PORT=8001 #local port for the MCP server to listen on
MCP_MOUNT_PATH=/ #base path for the MCP server (root in this case)
MCP_SSE_PATH=/sse #mcp message path for sse
MCP_MESSAGE_PATH=/messages/ #mcp message path for standard messages e.g. POST /messages/ to send a message to n8n
MCP_STREAMABLE_HTTP_PATH=/mcp #path for streamable http communication
MCP_DEDUPE_SECONDS=90 #stops messaging request duping (to stop double runs of mcp tool calls)
MCP_ERROR_DEDUPE_SECONDS=25 #stops error message request duping
ASX_HEADLESS=false #just part of screenshotting to remove browser edges
ASX_PRE_CLOSE_WAIT_MS=5000 #wait time in ms before closing browser after screenshot
ASX_WATCH_WINDOW_MS=20000 #time to wait for chart to appear before failing
ASX_WATCH_POLL_MS=120 #time to wait between checking via polling for chart to appear
ASX_PDF_ENGINE=auto #pdf converter choice
ASX_LIBREOFFICE_TIMEOUT_SECONDS=120 #max time to wait for libreoffice to convert the file before killing it